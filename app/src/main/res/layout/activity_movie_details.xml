<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="TextView"
            android:textSize="33sp"
            android:textColor="@color/white"
            android:background="@color/green_name"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:paddingRight="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/imagenDetail"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:padding="10dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_Ano"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:padding="1dp"
                    android:textSize="21sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/textView_Duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/cardview_dark_background"/>

                <TextView
                    android:id="@+id/textView_votos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="13sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/cardview_dark_background"/>

                <ToggleButton
                    android:id="@+id/tb_favorites"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="5dp"
                    android:textOff="MAKE AS FAVORITE"
                    android:textOn="FAVORITE"
                    android:textColor="@color/cardview_dark_background"
                    android:background="@drawable/bt_toggle"
                    android:onClick="favorite"
                    />

            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/textView_Descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="18sp"
            android:padding="10dp"
            android:textColor="@color/cardview_dark_background"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/cardview_dark_background" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_trailers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_play_buttom"/>

        <TextView
            android:id="@+id/textView_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="12sp"
            android:padding="10dp"
            android:textColor="@color/cardview_dark_background"/>

    </LinearLayout>

</ScrollView>

